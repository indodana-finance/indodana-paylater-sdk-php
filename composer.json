{
  "name": "indodana/indodana-paylater-sdk",
  "description": "Indodana Paylater SDK for PHP that provides merchant integration functionalities",
  "authors": [
    {
      "name": "Indodana",
      "email": "dev@indodana.com"
    },
    {
      "name": "Steven Yang",
      "email": "syang@indodana.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Indodana\\":"src/"
    }
  },
  "scripts": {
    "sniffer:php8": "phpcs -p ./src --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility --runtime-set testVersion 8.0",
    "test": "./vendor/bin/phpunit --configuration phpunit.xml.dist --testdox --verbose"
  },
  "require": {
    "php": "^5.6|^7.0|^8.0",
    "respect/validation": "^1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^5",
    "mockery/mockery": "^1.3",
    "php-mock/php-mock-mockery": "^1.3",
    "squizlabs/php_codesniffer": "^3.6",
    "phpcompatibility/php-compatibility": "^9.3"
  }
}
